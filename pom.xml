<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <groupId>org.sonarsource.solidity</groupId>
  <artifactId>sonar-solidity</artifactId>
  <version>0.4-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>SonarSolidity</name>
  <description>Draft of sonar-solidity</description>
  <scm>
     <connection>scm:git:git@github.com:stylianos-agapiou-sonarsource/sonar-solidity.git</connection>
     <developerConnection>scm:git:git@github.com:stylianos-agapiou-sonarsource/sonar-solidity.git</developerConnection>
     <url>https://github.com/stylianos-agapiou-sonarsource/sonar-solidity</url>
  </scm>
  <issueManagement>
     <system>GitHub</system>
     <url>https://github.com/stylianos-agapiou-sonarsource/sonar-solidity/issues</url>
  </issueManagement>
  <ciManagement>
     <system>Travis</system>
     <url>https://travis-ci.org/stylianos-agapiou-sonarsource/sonar-solidity</url>
  </ciManagement>

  <modules>
  <module>solidity-frontend</module>
  <module>solidity-plugin</module>
  <module>solidity-checks</module>
  </modules>
  
    <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <sonar.apiVersion>6.7.1</sonar.apiVersion>
    <jdk.min.version>1.8</jdk.min.version>
  </properties>
  
  <dependencies>
      <dependency>
      <groupId>org.sonarsource.sonarqube</groupId>
      <artifactId>sonar-plugin-api</artifactId>
      <version>${sonar.apiVersion}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <!-- packaged with the plugin -->
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
      <version>2.6</version>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <version>1.9.0</version>
    </dependency>
    <dependency>
      <groupId>org.assertj</groupId>
      <artifactId>assertj-core</artifactId>
      <version>3.8.0</version>
    </dependency>
    <dependency>
      <groupId>org.antlr</groupId>
      <artifactId>antlr4</artifactId>
      <version>4.7.1</version>
    </dependency>
    <!-- unit tests -->
    <dependency>
      <groupId>org.sonarsource.sonarqube</groupId>
      <artifactId>sonar-testing-harness</artifactId>
      <version>${sonar.apiVersion}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.11</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
       <plugin>
          <groupId>org.jacoco</groupId>
          <artifactId>jacoco-maven-plugin</artifactId>
          <configuration>
            <includes>
              <include>org.sonarsource.*</include>
            </includes>
            <excludes>
              <exclude>org.sonarsource.maven.model.*</exclude>
              <exclude>org.sonarsource.solidity.frontend.SolidityParser.java</exclude>
              <exclude>org.sonarsource.solidity.frontend.SolidityBaseVisitor.java</exclude>
              <exclude>org.sonarsource.solidity.frontend.SolidityVisitor.java</exclude>
            </excludes>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-surefire-plugin</artifactId>
          <configuration />
        </plugin>
    
    
    
    
